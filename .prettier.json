{
  "printWidth": 100,
  "singleQuote": true,
  "semi": true,
  "trailingComma": "all",
  "arrowParens": "always",
  "useTabs": false,
  "tabWidth": 2,
  "endOfLine": "lf",
  "plugins": ["prettier-plugin-tailwindcss"],
  "tailwindStylesheet": "./src/client/ui/tailwind.css",
  "overrides": [
    {
      "files": ["**/*.md", "**/*.mdx"],
      "options": {
        "printWidth": 80,
        "proseWrap": "preserve"
      }
    },
    {
      "files": ["**/*.json"],
      "options": { "parser": "json", "printWidth": 100 }
    },
    {
      "files": ["**/*.json5"],
      "options": { "parser": "json5", "printWidth": 100 }
    },
    {
      "files": ["**/*.jsonc"],
      "options": { "parser": "jsonc", "printWidth": 100 }
    },
    { "files": ["**/*.{yml,yaml}"], "options": { "printWidth": 100 } }
  ]
}
